{% extends 'base.html.twig' %}

{% block body %}
    <h1>Endereco</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ endereco.id }}</td>
            </tr>
            <tr>
                <th>Rua</th>
                <td>{{ endereco.rua }}</td>
            </tr>
            <tr>
                <th>Nomebairro</th>
                <td>{{ endereco.nomeBairro }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if endereco.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if endereco.data %}{{ endereco.data|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('endereco_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('endereco_edit', { 'id': endereco.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
